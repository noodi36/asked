<div class="container">
  <div class="inputBox">
    <p>누링이에게 궁금한 게 모야>_<?</p> 
    <form action="/asked/write" method="post">
      <div class="form-group">
        <input type="text" name="content" class="form-control" required>
        <button type="submit" class="btn btn-default">질문하기</button>      
      </div>
    </form>
  </div>

  <div class="printBox">
    <div class="printHead">
      <h5><%= @counting %>개의 질문</h5>
    </div>
    <div class="printContent">
      <hr class="printBet">
      <% @all_post.each do |p| %>
      <i class="fa fa-question-circle" aria-hidden="true"></i> <%= p.content %><a href="/asked/destroy/<%= p.id %>"> | [x]</a><a href="/asked/update_view/<%= p.id %>"> [m]</a><br>
        <div class="printComment">
          <% p.comments.each do |c| %>
          <i class="fa fa-arrow-right" aria-hidden="true"></i><%= c.content %><br>
          <% end %>          
           <form action="/asked/comment" method="post">
            <div class="form-group formComment">
              <input type="hidden" name="post_id" value="<%= p.id %>">
              <input type="text" name="content" class="form-control" placeholder="댓글을 입력하세요" required>
              <input type="submit" class="btn" value="작성">      
            </div>
          </form>
        </div>
      <% end %> 
    </div>
  </div>
</div>

